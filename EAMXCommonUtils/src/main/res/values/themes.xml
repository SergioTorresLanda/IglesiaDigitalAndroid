<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="ll_row_primary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_10</item>
        <item name="android:orientation">vertical</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>
    <style name="tv_label_primary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">@dimen/size_20</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>
    <style name="ll_row_secondary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:orientation">vertical</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>
    <style name="ll_row_secondary_switch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_24</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>
    <style name="ll_row_secondary_switch_status">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_10</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="tv_label_secondary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/spro_text_regular</item>
        <item name="android:textSize">@dimen/size_18</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="layout_constraintTop_toBottomOf">parent</item>
    </style>
    <style name="tv_label_secondary_sub">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/spro_text_regular</item>
        <item name="android:textSize">@dimen/size_16</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="layout_constraintTop_toBottomOf">parent</item>
    </style>
    <style name="til_material_secondary" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="android:textColorHint">@color/primaryColor</item>
        <item name="boxStrokeColor">@color/primaryColor</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintTextColor">@color/primaryColor</item>
        <item name="android:textSize">@dimen/size_18</item>
        <item name="fontFamily">@font/avenir_black</item>
        <item name="endIconMode">custom</item>
        <item name="expandedHintEnabled">false</item>
        <!--<item name="errorIconDrawable">@drawable/ic_check_error</item>-->
    </style>
    <style name="tiet_material_secondary" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:lineSpacingExtra">10sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/size_14</item>
        <item name="fontFamily">@font/open_sans_regular</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="tv_time_secondary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/white</item>
        <item name="android:clickable">true</item>
        <item name="android:drawableTint">#AF9B6F</item>
        <item name="android:drawableRight">@drawable/ic_reloj</item>
        <item name="android:focusable">true</item>
        <item name="android:text">00:00</item>
        <item name="android:textColor">#99000000</item>
        <item name="android:textSize">@dimen/size_18</item>
        <item name="fontFamily">@font/open_sans_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">@dimen/margin_10</item>
    </style>
    <!--<item name="android:drawableRight">@drawable/ic_schedule</item>-->
    <style name="tv_date_secondary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/white</item>
        <item name="android:clickable">true</item>
        <item name="android:drawableTint">#AF9B6F</item>
        <item name="android:focusable">true</item>
        <item name="android:text">dd/mm/aaaa</item>
        <item name="android:textColor">#99000000</item>
        <item name="android:textSize">@dimen/size_16</item>
        <item name="fontFamily">@font/open_sans_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:drawableEnd">@drawable/calendar_small</item>
        <item name="android:padding">@dimen/margin_10</item>
    </style>
    <style name="tv_date_secondary_icDate">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:clickable">true</item>
        <item name="android:drawableStart">@drawable/ic_schedule</item>
        <item name="android:focusable">true</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="list_label_catalog" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>
        <item name="android:textSize">@dimen/size_17</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:elevation">0dp</item>
    </style>
    <style name="spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_40</item>
        <item name="android:layout_marginTop">@dimen/margin_10</item>
        <item name="android:background">@drawable/style_spinner_selector</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textSize">@dimen/size_14</item>
        <item name="android:textColor">@color/textEditColor</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>
    <style name="spinner_selection">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_5</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textSize">@dimen/size_10</item>
        <item name="android:textColor">@color/red_azteca</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>
    <!-- ITEM -->
    <style name="v_row_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_7</item>
        <item name="android:background">#B1B2B5</item>
    </style>
    <style name="tv_row_vacio_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_250</item>
        <item name="android:layout_marginTop">@dimen/margin_10</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">@dimen/size_20</item>
        <item name="android:textColor">@color/primaryColor</item>
    </style>
    <style name="ll_title_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_12</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="tv_title_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">left</item>
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>
        <item name="android:textSize">@dimen/size_16</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:lineSpacingExtra">@dimen/size_1</item>
    </style>
    <style name="btn_item_material" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/height_40</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/border_radius</item>
        <item name="backgroundColor">@color/primaryColor</item>
        <item name="fontFamily">@font/open_sans_semi_bold</item>
        <item name="android:textSize">@dimen/size_20</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="ll_fill_btns">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>
    <style name="btn_primary" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint">@color/primaryColor</item>
        <item name="android:background">@drawable/border_radius</item>
        <item name="backgroundColor">@color/primaryColor</item>
        <item name="fontFamily">@font/open_sans_semi_bold</item>
        <item name="android:textSize">@dimen/size_20</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>
    <style name="ll_row_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_10</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="im_icon_item">
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="tv_paragraph_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">@dimen/margin_5</item>
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>
        <item name="android:textSize">@dimen/size_14</item>
        <item name="android:textColor">@color/secondaryColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">@dimen/size_1</item>
    </style>
    <!-- ITEM -->

    <style name="StyleBtnFlotante" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/btn_background_accept</item>
        <item name="cornerRadius">@dimen/radius_20</item>
        <item name="android:textSize">@dimen/size_15</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>