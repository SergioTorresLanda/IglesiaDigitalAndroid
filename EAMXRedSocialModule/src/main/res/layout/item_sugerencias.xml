<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cvComunity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:visibility="visible">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvImagen"
            android:layout_width="104dp"
            android:layout_height="104dp"
            android:visibility="visible"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivCommunity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                tools:srcCompat="@drawable/ic_empy" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/spro_text_regular"
            android:lineSpacingExtra="2sp"
            android:textColor="#192a73"
            android:textSize="@dimen/size_12"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="@+id/cvImagen"
            app:layout_constraintStart_toStartOf="@+id/cvImagen"
            app:layout_constraintTop_toBottomOf="@+id/cvImagen"
            tools:text="San francisco" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>