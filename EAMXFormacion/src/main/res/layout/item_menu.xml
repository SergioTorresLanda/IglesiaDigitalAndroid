<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/llItem"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/white"
        android:padding="4dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivMenuItem_select"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:elevation="6dp"
            android:src="@color/colorDialogGray"
            android:visibility="gone"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivMenuItem_unselect"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:elevation="6dp"
            android:src="@color/green_ok"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivMenuItem_select_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_item_menu_select"
            android:layout_marginTop="2dp" />
    </LinearLayout>


</layout>