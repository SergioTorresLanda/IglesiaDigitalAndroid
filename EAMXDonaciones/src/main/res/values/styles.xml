<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#6be800</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/edittext_text_hint_color</item>
        <item name="colorControlActivated">@color/dorado</item>
    </style>
    <style name="TextStyle">
        <item name="android:fontFamily">@font/spro_text_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:textColor">#363636</item>
    </style>

</resources>