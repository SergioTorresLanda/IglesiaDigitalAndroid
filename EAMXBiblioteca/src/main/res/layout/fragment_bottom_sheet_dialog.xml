<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        tools:context=".customviews.BottomSheetDialogFragment">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/iconorder" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="sans-serif-medium"
            android:lineSpacingExtra="2sp"
            android:text="Ordenar"
            android:textColor="#13277c"
            android:textSize="16sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toStartOf="@+id/tvLimpiarFiltro"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView" />

        <TextView
            android:id="@+id/tvLimpiarFiltro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:fontFamily="sans-serif-medium"
            android:lineSpacingExtra="2sp"
            android:text="@string/limpiar_filtro"
            android:textColor="#13277c"
            android:textSize="16sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView5" />

        <RadioButton
            android:id="@+id/rbRecienteAntiguio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="8dp"
            android:checked="false"
            android:text="Fecha mas reciente a mas antiguo"
            app:layout_constraintEnd_toEndOf="@+id/tvLimpiarFiltro"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <RadioButton
            android:id="@+id/rbAntiguoReciente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:checked="false"
            android:text="Fecha mas antiguo a mas reciente"
            app:layout_constraintEnd_toEndOf="@+id/rbRecienteAntiguio"
            app:layout_constraintStart_toStartOf="@+id/rbRecienteAntiguio"
            app:layout_constraintTop_toBottomOf="@+id/rbRecienteAntiguio" />

        <RadioButton
            android:id="@+id/rbMayorMenor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:checked="false"
            android:text="Monto mayor a menor"
            app:layout_constraintEnd_toEndOf="@+id/rbAntiguoReciente"
            app:layout_constraintStart_toStartOf="@+id/rbAntiguoReciente"
            app:layout_constraintTop_toBottomOf="@+id/rbAntiguoReciente" />


        <RadioButton
            android:id="@+id/rbMenorMayor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:checked="false"
            android:text="Monto menor a mayor"
            app:layout_constraintEnd_toEndOf="@+id/rbMayorMenor"
            app:layout_constraintStart_toStartOf="@+id/rbMayorMenor"
            app:layout_constraintTop_toBottomOf="@+id/rbMayorMenor" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@+id/rbMenorMayor"
            app:layout_constraintTop_toBottomOf="@+id/rbMenorMayor"
            app:srcCompat="@drawable/filter" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="sans-serif-medium"
            android:lineSpacingExtra="2sp"
            android:text="Filtrar"
            android:textColor="#13277c"
            android:textSize="16sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="@+id/rgOrder"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="@+id/imageView3" />

        <RadioButton
            android:id="@+id/rbRangoUno"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="8dp"
            android:checked="false"
            android:padding="8dp"
            android:text="Niños (6 a 12 años)"
            app:layout_constraintEnd_toEndOf="@+id/tvLimpiarFiltro"
            app:layout_constraintStart_toStartOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <RadioButton
            android:id="@+id/rbRangoDos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:checked="false"
            android:padding="8dp"
            android:text="Jóvenes (13 a 26 años)"
            app:layout_constraintEnd_toEndOf="@+id/rbRangoUno"
            app:layout_constraintStart_toStartOf="@+id/rbRangoUno"
            app:layout_constraintTop_toBottomOf="@+id/rbRangoUno" />


        <RadioButton
            android:id="@+id/rbRangoTres"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="8dp"
            android:checked="false"
            android:padding="8dp"
            android:text="Adultos (27 años o más"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/rbRangoDos"
            app:layout_constraintStart_toStartOf="@+id/rbRangoDos"
            app:layout_constraintTop_toBottomOf="@+id/rbRangoDos" />

        <RadioButton
            android:id="@+id/rbTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Por tema"
            app:layout_constraintStart_toStartOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Por rango de edad"
            android:textColor="#000000"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/rbTheme"
            app:layout_constraintTop_toBottomOf="@+id/rbTheme" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>