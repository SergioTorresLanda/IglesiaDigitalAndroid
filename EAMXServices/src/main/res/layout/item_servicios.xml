<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="10dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/very_small_margin_padding"
            android:layout_marginBottom="@dimen/very_small_margin_padding"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTitleService"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="17dp"
                    android:letterSpacing="@dimen/letter_spacing_dimen"
                    android:lineSpacingExtra="6sp"
                    android:textColor="@color/botton_background_color"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="Sacramentos" />

                <TextView
                    android:id="@+id/tvDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="17dp"
                    android:letterSpacing="@dimen/letter_spacing_dimen"
                    android:textStyle="normal"
                    android:textSize="14sp"
                    android:textColor="#75787b"
                    tools:text="Sacramentos" />


            </LinearLayout>

            <ImageView
                android:id="@+id/ivImgMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="21dp"
                tools:src="@drawable/ic_sacrament" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>