<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".ui.EventVolunteerDetailFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">

            <LinearLayout
                android:id="@+id/lNombreVoluntario"
                style="@style/ll_row_secondary"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/tvNombreVoluntario"
                    style="@style/tv_label_secondary"
                    android:text="Nombre del voluntario" />


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilNombreVoluntario"
                    style="@style/til_material_secondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etNombreVoluntario"
                        style="@style/tiet_material_secondary"
                        android:digits="@string/digits_only_letters"
                        android:imeOptions="actionNext"
                        android:inputType="textCapWords|textAutoCorrect|textPersonName"
                        android:maxLength="1500"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <!-- Ocultos -->
            <LinearLayout
                android:id="@+id/labelAddressVoluntario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lNombreVoluntario">

                <TextView
                    android:id="@+id/tvlabelAddressVoluntario"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:lineSpacingExtra="4sp"
                    android:lines="1"
                    android:text="Dirección"
                    android:textColor="@color/textview_title_color"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/tvAddress" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lAddressVoluntario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/labelAddressVoluntario">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etgetAddressVoluntario"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:letterSpacing="0.01"
                    android:lineSpacingExtra="10sp"
                    android:maxLength="250"
                    android:singleLine="false"
                    android:textColor="#99000000"
                    android:textSize="18sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tvAddressVoluntario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="0dp"
                    android:layout_marginBottom="10dp"
                    android:drawableTop="@drawable/ic_church_map"
                    android:fontFamily="sans-serif-medium"
                    android:text="Actualizar"
                    android:textColor="@color/textview_title_color"
                    android:textSize="17sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lResponsableVoluntario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lAddressVoluntario">

                <TextView
                    android:id="@+id/tvResponsableVoluntario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:fontFamily="sans-serif-medium"
                    android:lineSpacingExtra="4sp"
                    android:lines="1"
                    android:text="Responsable del comedor"
                    android:textColor="@color/textview_title_color"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="parent" />


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilResponsableVoluntario"
                    style="@style/StyleEdtGeneric"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:endIconMode="custom"
                    app:errorIconDrawable="@drawable/ic_check_error"
                    app:expandedHintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etResponsableVoluntario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:digits="@string/digits_only_letters"
                        android:imeOptions="actionNext"
                        android:inputType="textCapWords|textAutoCorrect|textPersonName"
                        android:letterSpacing="0.01"
                        android:lineSpacingExtra="10sp"
                        android:maxLength="1500"
                        android:singleLine="true"
                        android:textColor="#99000000"
                        android:textSize="18sp"
                        android:textStyle="normal" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <!-- Ocultos -->

            <LinearLayout
                android:id="@+id/lEmail"
                style="@style/ll_row_secondary"
                app:layout_constraintTop_toBottomOf="@+id/lResponsableVoluntario"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/tvEmail"
                    style="@style/tv_label_secondary"
                    android:text="Correo"
                    app:layout_constraintTop_toBottomOf="@+id/cwcDays" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilEmail"
                    style="@style/til_material_secondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEmailV"
                        style="@style/tiet_material_secondary"
                        android:digits="@string/digits_only_email"
                        android:imeOptions="actionNext"
                        android:inputType="textCapWords|textAutoCorrect|textPersonName"
                        android:maxLength="50"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lPhone"
                style="@style/ll_row_secondary"
                app:layout_constraintTop_toBottomOf="@+id/lEmail"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/labelPhone"
                    style="@style/tv_label_secondary"
                    android:text="Teléfono" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilPhonev"
                    style="@style/til_material_secondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPhonev"
                        style="@style/tiet_material_secondary"
                        android:digits="@string/digits_only_number_phone"
                        android:imeOptions="actionDone"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/labelInvitados"
                style="@style/ll_row_secondary"
                app:layout_constraintTop_toBottomOf="@+id/lPhone"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/tvHorarios"
                    style="@style/tv_label_secondary"
                    android:text="Voluntarios invitados" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/lMultiUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/labelInvitados">

                <LinearLayout
                    android:id="@+id/lInvitado"
                    style="@style/ll_row_secondary"
                    android:layout_marginTop="@dimen/margin_2"
                    tools:ignore="MissingConstraints">

                    <TextView
                        android:id="@+id/tvNameInvitado"
                        style="@style/tv_label_secondary"
                        android:text="Nombre del invitado"
                        android:textSize="@dimen/size_16" />


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilInvitado"
                        style="@style/til_material_secondary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etInvitado"
                            style="@style/tiet_material_secondary"
                            android:digits="@string/digits_only_letters"
                            android:imeOptions="actionNext"
                            android:inputType="textCapWords|textAutoCorrect|textPersonName"
                            android:maxLength="1500"
                            android:singleLine="true" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lPhoneInvitado"
                    style="@style/ll_row_secondary"
                    android:layout_marginTop="@dimen/margin_2"
                    app:layout_constraintTop_toBottomOf="@+id/lEmail"
                    tools:ignore="MissingConstraints">

                    <TextView
                        android:id="@+id/labelPhoneInvitado"
                        style="@style/tv_label_secondary"
                        android:text="Teléfono del invitado"
                        android:textSize="@dimen/size_16" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilPhoneInvitado"
                        style="@style/til_material_secondary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPhoneInvitado"
                            style="@style/tiet_material_secondary"
                            android:digits="@string/digits_only_number_phone"
                            android:imeOptions="actionDone"
                            android:inputType="phone"
                            android:maxLength="10"
                            android:singleLine="true" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnAgregar"
                    style="@style/StylebtnParticipacion"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:background="@drawable/border_radius"
                    android:gravity="end"
                    android:text="Agregar"
                    android:textAppearance="@style/TextAppearance.AppCompat" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_invitado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btnAgregar"
                    tools:listitem="@layout/item_event_volunteer_multiuser" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lbtnGuardar"
                style="@style/ll_fill_btns"
                android:layout_marginTop="@dimen/margin_24"
                app:layout_constraintTop_toBottomOf="@+id/lMultiUser"
                tools:ignore="MissingConstraints">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnGuardarVoluntario"
                    style="@style/btn_primary"
                    android:layout_width="match_parent"
                    android:text="Guardar" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>