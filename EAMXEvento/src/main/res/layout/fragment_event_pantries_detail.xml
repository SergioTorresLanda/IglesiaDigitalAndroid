                app:layout_constraintTop_toBottomOf="@+id/labelTimeReception">

                <TextView
                    android:id="@+id/tvFirstTimeReception"
                    style="@style/tv_time_secondary"
                    android:layout_width="0dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvEndTimeReception"
                    style="@style/tv_time_secondary"
                    android:layout_width="0dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lArmadoPantries"
                style="@style/ll_row_secondary"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/llTimeReception"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/tvArmadoPantries"
                    style="@style/tv_label_secondary"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:text="¿Requiere armado?" />

                <Switch
