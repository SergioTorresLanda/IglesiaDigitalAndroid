                    app:layout_constraintTop_toBottomOf="@+id/tvZoneDetailPantries" />

                <TextView
                    android:id="@+id/lblSeleccionPantries"
                    style="@style/spinner_selection" />
            </LinearLayout>

            <LinearLayout
