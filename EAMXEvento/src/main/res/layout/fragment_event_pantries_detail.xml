<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".ui.EventPantriesDetailFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">

            <LinearLayout
                android:id="@+id/llBotonPantries"
                style="@style/ll_fill_btns"
                android:visibility="visible"
                tools:ignore="MissingConstraints">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnDonorPantries"
                    style="@style/btn_primary"
                    android:layout_width="match_parent"
                    android:text="Donadores" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnVolunteerPantries"
                    style="@style/btn_primary"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/margin_10"
                    android:text="Voluntarios" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lEstatusPantries"
                android:layout_marginStart="150dp"
                style="@style/ll_row_secondary_switch"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/llBotonPantries"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/tvEstatusPantries"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/tv_label_secondary"
                    android:text="Habilitado" />

                <Switch
                    android:id="@+id/switchPantries"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_25"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lResponPantries"
                style="@style/ll_row_secondary"
                app:layout_constraintTop_toBottomOf="@+id/lEstatusPantries"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/tvResponPantries"
                    style="@style/tv_label_secondary"
                    android:text="Responsable" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilResponPantries"
                    style="@style/til_material_secondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etResponPantries"
                        style="@style/tiet_material_secondary"
                        android:digits="@string/digits_only_letters"
                        android:imeOptions="actionNext"
                        android:inputType="textCapWords|textAutoCorrect|textPersonName"
                        android:maxLength="1500"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lEmailPantries"
                style="@style/ll_row_secondary"
                app:layout_constraintTop_toBottomOf="@+id/lResponPantries"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/tvEmailPantries"
                    style="@style/tv_label_secondary"
                    android:text="Correo"
                    app:layout_constraintTop_toBottomOf="@+id/lResponPantries" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilEmailPantries"
                    style="@style/til_material_secondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEmailPantries"
                        style="@style/tiet_material_secondary"
                        android:digits="@string/digits_only_email"
                        android:imeOptions="actionNext"
                        android:inputType="textCapWords|textAutoCorrect|textPersonName"
                        android:maxLength="50"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lPhonePantries"
                style="@style/ll_row_secondary"
                app:layout_constraintTop_toBottomOf="@+id/lEmailPantries"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/labelPhonePantries"
                    style="@style/tv_label_secondary"
                    android:text="Teléfono" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilPhonePantries"
                    style="@style/til_material_secondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPhonePantries"
                        style="@style/tiet_material_secondary"
                        android:digits="@string/digits_only_number_phone"
                        android:imeOptions="actionDone"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llAddressPantries"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/lPhonePantries">

                <LinearLayout
                    style="@style/ll_row_secondary"
                    android:layout_weight="1"
                    tools:ignore="MissingConstraints">

                    <TextView
                        android:id="@+id/tvlabelAdrressPantries"
                        style="@style/tv_label_secondary"
                        android:text="Dirección" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilAddressPantries"
                        style="@style/til_material_secondary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etgetAddressPantries"
                            style="@style/tiet_material_secondary"
                            android:imeOptions="actionNext"
                            android:maxLength="250"
                            android:singleLine="false" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    style="@style/ll_row_secondary"
                    android:layout_weight="2"
                    android:gravity="center"
                    app:layout_constraintStart_toStartOf="parent">

                    <TextView style="@style/tv_label_secondary" />

                    <TextView
                        android:id="@+id/tvAddressPantries"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@drawable/ic_church_map"
                        android:fontFamily="@font/open_sans_semi_bold"
                        android:text="Actualizar"
                        android:textColor="@color/primaryColor"
                        android:textSize="@dimen/size_18" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lZonePantries"
                style="@style/ll_row_secondary"
                app:layout_constraintTop_toBottomOf="@+id/llAddressPantries"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/tvZoneDetailPantries"
                    style="@style/tv_label_secondary"
                    android:text="Zona" />

                <Spinner
                    android:id="@+id/spZonePantries"
