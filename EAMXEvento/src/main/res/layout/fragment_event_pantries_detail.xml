                        style="@style/tiet_material_secondary"
                        android:digits="@string/digits_only_letters_caracters"
                        android:imeOptions="actionDone"
                        android:inputType="textAutoCorrect|textPersonName"
                        android:maxLength="250"
                        android:text="" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/tvDescriptionConteoPantries"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:fontFamily="@font/open_sans_bold"
                    android:text="0/250"
                    android:textColor="@color/primaryColor"
                    android:textSize="@dimen/size_16" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lDonorPantries"
                style="@style/ll_row_secondary"
