            <LinearLayout
                android:id="@+id/lDeliveryPantries"
                style="@style/ll_row_secondary"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/llTimeArmado"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/tvDeliveryPantries"
                    style="@style/tv_label_secondary"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:text="¿Requiere entrega?" />

                <Switch
                    android:id="@+id/switchDeliveryPantries"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llDeliveryPantries"
                style="@style/ll_row_secondary"
                app:layout_constraintTop_toBottomOf="@+id/lDeliveryPantries"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/tvDelivery"
                    style="@style/tv_label_secondary"
                    android:text="Entrega de despensas" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/labelDateDelivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/llDeliveryPantries">

                <TextView
                    style="@style/tv_label_secondary"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginStart="15dp"
                    android:gravity="left"
                    android:text="Fecha inicio"
                    android:textSize="@dimen/size_16" />

                <TextView
                    style="@style/tv_label_secondary"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginStart="15dp"
                    android:gravity="left"
                    android:text="Fecha fin"
                    android:textSize="@dimen/size_16" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llDateDelivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/labelDateDelivery">

                <TextView
                    android:id="@+id/tvFirstDateDelivery"
                    style="@style/tv_date_secondary"
                    android:layout_width="0dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvEndDateDelivery"
                    style="@style/tv_date_secondary"
                    android:layout_width="0dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/labelDaysDelivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_2"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/llDateDelivery">

                <TextView
                    android:id="@+id/tvDaysDelivery"
                    style="@style/tv_label_secondary"
                    android:layout_weight="1"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    android:gravity="left"
                    android:text="Dias"
                    android:textSize="@dimen/size_16" />

                <include
                    android:id="@+id/iDaysDelivery"
                    layout="@layout/item_include_days"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/tvDaysDelivery" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/labelTimeDelivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/labelDaysDelivery">

                <TextView
                    style="@style/tv_label_secondary"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginStart="15dp"
                    android:gravity="left"
                    android:text="Hora inicio"
                    android:textSize="@dimen/size_16" />

                <TextView
                    style="@style/tv_label_secondary"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginStart="15dp"
                    android:gravity="left"
                    android:text="Hora fin"
                    android:textSize="@dimen/size_16" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llTimeDelivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/labelTimeDelivery">

                <TextView
                    android:id="@+id/tvFirstTimeDelivery"
                    style="@style/tv_time_secondary"
                    android:layout_width="0dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvEndTimeDelivery"
                    style="@style/tv_time_secondary"
                    android:layout_width="0dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llAddressDelivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/llTimeDelivery">

                <LinearLayout
                    style="@style/ll_row_secondary"
                    android:layout_weight="1"
                    tools:ignore="MissingConstraints">

                    <TextView
                        android:id="@+id/tvlabelAdrressDelivery"
                        style="@style/tv_label_secondary"
                        android:text="Dirección de entrega" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilAddressDelivery"
                        style="@style/til_material_secondary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etgetAddressDelivery"
                            style="@style/tiet_material_secondary"
                            android:imeOptions="actionNext"
                            android:maxLength="250"
                            android:singleLine="false" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    style="@style/ll_row_secondary"
                    android:layout_weight="2"
                    android:gravity="center"
                    app:layout_constraintStart_toStartOf="parent">

                    <TextView style="@style/tv_label_secondary" />

                    <TextView
                        android:id="@+id/tvAddressDelivery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@drawable/ic_church_map"
                        android:fontFamily="@font/open_sans_semi_bold"
                        android:text="Actualizar"
                        android:textColor="@color/primaryColor"
                        android:textSize="@dimen/size_18" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lbtnGuardarPantries"
                style="@style/ll_fill_btns"
                android:layout_marginTop="@dimen/margin_24"
                app:layout_constraintTop_toBottomOf="@+id/llAddressDelivery"
                tools:ignore="MissingConstraints">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnGuardarDelivery"
                    style="@style/btn_primary"
                    android:layout_width="match_parent"
                    android:text="Guardar" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</layout>