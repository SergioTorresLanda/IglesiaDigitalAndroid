                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/labelDaysArmado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
